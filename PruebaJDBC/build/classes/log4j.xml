<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="filePQR" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/datos/proteccion/internet/proteccion/radicacionpqrs/current/logs/pqrs.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="1MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH\:mm\:ss}] %-5p %c{1} - %m%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="co.com.proteccion.internet.pqr">
		<level value="ERROR" />
		<appender-ref ref="filePQR" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.ws">
		<level value="ERROR" />
		<appender-ref ref="filePQR" />
	</logger>

	<logger name="org.springframework.core">
		<level value="ERROR" />
		<appender-ref ref="filePQR" />
	</logger>

	<logger name="org.springframework.beans">
		<level value="ERROR" />
		<appender-ref ref="filePQR" />
	</logger>

	<logger name="org.springframework.context">
		<level value="ERROR" />
		<appender-ref ref="filePQR" />
	</logger>

	<logger name="org.springframework.web">
		<level value="ERROR" />
		<appender-ref ref="filePQR" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="ERROR" />
		<appender-ref ref="filePQR" />
	</root>

</log4j:configuration>